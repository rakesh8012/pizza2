                <ul class="nav sidebar-menu">
                    <li class="sidebar-label pt20">Menu</li>

                    <li>
                        <a href="/Customer/Index">
                            <span class="glyphicons glyphicons-user_add"></span>
                            <span class="sidebar-title">Customers</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Employee/Index">
                            <span class="glyphicons glyphicons-user_add"></span>
                            <span class="sidebar-title">Employees</span>
                        </a>
                    </li>
                </ul>
                <!-- End: Sidebar Left Menu -->
                <!-- Start: Sidebar Collapse Button -->
                <div class="sidebar-toggle-mini">
                    <a href="#">
                        <span class="fa fa-sign-out"></span>
                    </a>
                </div>
                <!-- End: Sidebar Collapse Button -->

            </div>
            <!-- End: Sidebar Left Content -->

        </aside>

        @RenderBody()

    </div>

    <!-- End: Main -->
    <!-- BEGIN: PAGE SCRIPTS -->
    <!-- jQuery -->



    <script src="@Url.Content("~/Content/vendor/jquery/jquery_ui/jquery-ui.min.js")"></script>

    <!-- Datatables -->
    <script src="@Url.Content("~/Content/vendor/plugins/datatables/media/js/jquery.dataTables.js")"></script>

    <!-- Datatables Tabletools addon -->
    <script src="@Url.Content("~/Content/vendor/plugins/datatables/extensions/TableTools/js/dataTables.tableTools.min.js")"></script>

    <!-- Datatables ColReorder addon -->
    <script src="@Url.Content("~/Content/vendor/plugins/datatables/extensions/ColReorder/js/dataTables.colReorder.min.js")"></script>

    <!-- Datatables Bootstrap Modifications  -->
    <script src="@Url.Content("~/Content/vendor/plugins/datatables/media/js/dataTables.bootstrap.js")"></script>

    <!-- Theme Javascript -->
    <script src="@Url.Content("~/Content/assets/js/utility/utility.js")"></script>
    <script src="@Url.Content("~/Content/assets/js/demo/demo.js")"></script>
    <script src="@Url.Content("~/Content/assets/js/main.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            //$('.nav li a').click(function (e) {

            //    $('.nav li.active').removeClass('active');

            //    var $parent = $(this).parent();
            //    $parent.addClass('active');

