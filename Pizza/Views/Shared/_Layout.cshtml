    <!-- Font CSS (Via CDN) -->
    <link rel='stylesheet' type='text/css' href='http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700'>
    <link rel="stylesheet" type="text/css" href="~/Content/assets/fonts/glyphicons-pro/glyphicons-pro.css">
    <!-- Datatables CSS -->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/plugins/datatables/media/css/dataTables.bootstrap.css">

    <!-- Datatables Editor Addon CSS -->
