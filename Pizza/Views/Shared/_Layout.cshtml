<body class="datatables-page" data-spy="scroll" data-target="#nav-spy" data-offset="300">
    <!-- Start: Main -->
    <div id="main">
        <!-- Start: Header -->
        <header class="navbar navbar-fixed-top navbar-shadow">
            <div class="navbar-branding width60">
                <span id="toggle_sidemenu_l" class="ad ad-lines"></span>
            </div>
            <ul class="nav navbar-nav navbar-left">
                <li class="dropdown menu-merge mt3">
                    <img src="~/Content/images/logo.png" title="Pizza" class="center-block img-responsive" style="max-width: 200px;">
                </li>

            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown menu-merge mt3">
                    <a href="#" class="dropdown-toggle fw600 p15" data-toggle="dropdown">
                        <span class="hidden-xs pl15"> @Convert.ToString(Session["UserName"]) </span>
                        <span class="caret caret-tp hidden-xs"></span>
                    </a>
                    <ul class="dropdown-menu list-group dropdown-persist w250" role="menu">
                        <li class="dropdown-footer">
                            @Html.ActionLink("Logout", "Logoff", "Login")
                            @*<a href="#" class="">
                                    <span class="fa fa-power-off pr5"></span> Logout
                                </a>*@
                        </li>
                    </ul>
                </li>
            </ul>
        </header>
        <!-- End: Header -->
        <!-- Start: Sidebar -->
        <aside id="sidebar_left" class="nano nano-light affix">

            <!-- Start: Sidebar Left Content -->
            <div class="sidebar-left-content nano-content">
